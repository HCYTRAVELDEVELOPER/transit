:root {
    --color_empresarial: #DB0F32;
}
body .ui-page .logotipoHeader_home{
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
}
body .ui-page .logotipoHeader_home img{
    height: 23px;
    top: 5px;
    position: relative;
}
.centrar_mapa{
    position: fixed;
    /* bottom: calc(0% + 153px); */
    /* top: auto; */
    z-index: 10;
    left: auto;
    right: 10px;
    top: 4px;
}

.centrar_mapa .material-icons{
    font-size: 35px;
    background-color: var(--color_empresarial);
    color: #fff!important;
    border-radius: 50%;
    padding: 3px;
}
body .ui-page .my-header .btnMenuHeader {
    background: #f64514;
}
body .ui-page .my-header .btnMenuHeader .menuBarEnc {
    color: #fff;
}
html body .contenedor_adondevamos .button_adondevas .material-icons {
    /*color: #f64514;*/
}
body .ui-page .createLogin .material-icons, body .ui-page .createLogin .nw_label {
    color: #000!important; 
}
body .home_background_image {
    background-color: transparent;
    background-size: cover!important;
}
body a.btnExec.btnForm.ui-shadow.ui-btn.ui-corner-all.ui-btn-inline.Btn.cambiar_clave, body a.btnExec.btnForm.ui-shadow.ui-btn.ui-corner-all.ui-btn-inline.Btn.crear_cuenta {
    color: var(--color_empresarial)!important; 
}
body h1.titleEnc{
    filter: brightness(0.5);
}
#clave::placeholder, #usuario::placeholder {
    color: #232222!important;
}
body #usuario, body #clave{
    border-color: #aca5a5;
    color: #000!important;
}