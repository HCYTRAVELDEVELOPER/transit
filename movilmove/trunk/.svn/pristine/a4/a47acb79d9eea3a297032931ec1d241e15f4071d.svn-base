        self.canvas = canvas;
        var columns = [
            {
                name: "id",
                label: "ID",
                visible: true
            },
            {
                name: "direccion",
                label: "Direcci√≥n"
            },
            {
                name: "nombre_pasajero",
                label: ""
            },
            {
                name: "telefono",
                label: ""
            },
            {
                name: "ciudad_parada",
                label: ""
            },
            {
                name: "estado",
                label: ""
            },
            {
                name: "novedad",
                label: ""
            },
            {
                name: "novedad_observaciones",
                label: ""
            },
            {
                name: "fecha_final",
                label: ""
            },
            {
                name: "descripcion_carga",
                label: ""
//                visible: false
            },
            {
                name: "usuario_pasajero",
