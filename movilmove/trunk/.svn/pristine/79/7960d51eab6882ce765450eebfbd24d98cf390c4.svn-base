:root {
    --color_empresarial: #ff6b25;
}
body .ui-page .logotipoHeader_home{
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
}
body .ui-page .logotipoHeader img {
    margin-top: 10px;
}
body .createLoginFoo .logotipoHeader img {
    /* height: auto; */
    /* max-width: 200px; */
    border-radius: 29%;
    box-shadow: 0px 0px 7px 2px rgb(0 0 0 / 56%);
    background-color: #fff;
    padding: 11px;
}
body .centrar_mapa .material-icons {
    font-size: 35px;
    background-color: var(--color_empresarial);
}


html body .ui-page .logotipoHeader_home img {
    height: 48px;
    top: -6px;
    position: relative;
    object-fit: contain;
    object-position: center;
    border-radius: 10px;
    box-shadow: 0px 0px 5px #000;
    background-color: #fff!important;
    padding: 5px;
}

.centrar_mapa{
    position: fixed;
    /* bottom: calc(0% + 153px); */
    /* top: auto; */
    z-index: 10;
    left: auto;
    right: 10px;
    top: 4px;
}
.centrar_mapa .material-icons{
    font-size: 35px;
    background-color: #f64512;
    color: #fff!important;
    border-radius: 50%;
    padding: 3px;
}
body .ui-page .my-header .btnMenuHeader {
    background: #f64514;
}
body .ui-page .my-header .btnMenuHeader .menuBarEnc {
    color: #fff;
}
html body .contenedor_adondevamos .button_adondevas .material-icons {
    /*color: #f64514;*/
}

body .home_background_image{
    background-size: cover;
}


html body #foo.createLoginFoo {
    background-color: #fff!important;
}
html body #foo.createLoginFoo .headerEnc_relative{
    background-color: #ff6b25!important;
}
body .titleEncContain{
    color: #ff6b25;
    margin-top: 22px;
    font-size: 20px;
}

html body .ui-page .createLogin .material-icons,
html body .ui-page .createLogin .nw_label {
    color: gray;
    font-weight: normal;
}

html .createLoginFoo input#usuario.text.nw_textField,
html .createLoginFoo input#clave.text.nw_textField
{
    background-color: #ededed!important;
    color: #000!important;
}
html .createLoginFoo input#usuario.text.nw_textField::placeholder,
html .createLoginFoo input#clave.text.nw_textField::placeholder
{
    color: gray!important;
}

html body a.btnExec.btnForm.ui-shadow.ui-btn.ui-corner-all.ui-btn-inline.Btn.cambiar_clave,
html body a.btnExec.btnForm.ui-shadow.ui-btn.ui-corner-all.ui-btn-inline.Btn.crear_cuenta
{
    color: gray;
    box-shadow: none;
}